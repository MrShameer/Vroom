<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >
                <RadioButton android:id="@+id/Red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Red"
                    android:fontFamily="@font/abel"
                    android:textSize="20dp"
                    android:textColor="#FF0000"
                    android:checked="true"
                    />
                <RadioButton android:id="@+id/Blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blue"
                    android:fontFamily="@font/abel"
                    android:textSize="20dp"
                    android:textColor="#001AFF"
                    />
                <RadioButton android:id="@+id/Green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Green"
                    android:fontFamily="@font/abel"
                    android:textSize="20dp"
                    android:textColor="#33FF00"
                    />
                <RadioButton android:id="@+id/White"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="White"
                    android:fontFamily="@font/abel"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    />
                <RadioButton android:id="@+id/Black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Black"
                    android:fontFamily="@font/abel"
                    android:textSize="20dp"
                    android:textColor="#000"
                    />
                <RadioButton android:id="@+id/Gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gray"
                    android:fontFamily="@font/abel"
                    android:textSize="20dp"
                    android:textColor="#808080"
                    />
                <RadioButton android:id="@+id/Brown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brown"
                    android:fontFamily="@font/abel"
                    android:textSize="20dp"
                    android:textColor="#964B00"
                    />

                <RadioButton android:id="@+id/Silver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Silver"
                    android:fontFamily="@font/abel"
                    android:textSize="20dp"
                    android:textColor="#C0C0C0"
                    />

                <RadioButton android:id="@+id/Beige"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Beige"
                    android:fontFamily="@font/abel"
                    android:textSize="20dp"
                    android:textColor="#F5F5DC"
                    />
                <RadioButton android:id="@+id/Turquoise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Turquoise"
                    android:fontFamily="@font/abel"
                    android:textSize="20dp"
                    android:textColor="#40E0D0"
                    />
                <RadioButton android:id="@+id/Orange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Orange"
                    android:fontFamily="@font/abel"
                    android:textSize="20dp"
                    android:textColor="#FF4500"
                    />
                <RadioButton android:id="@+id/Gold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gold"
                    android:fontFamily="@font/abel"
                    android:textSize="20dp"
                    android:textColor="#FFD700"
                    />
                <RadioButton android:id="@+id/Yellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yellow"
                    android:fontFamily="@font/abel"
                    android:textSize="20dp"
                    android:textColor="#FFFF00"
                    />
                <RadioButton android:id="@+id/Purple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Purple"
                    android:fontFamily="@font/abel"
                    android:textSize="20dp"
                    android:textColor="#800080"
                    />
                <RadioButton android:id="@+id/Pink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pink"
                    android:fontFamily="@font/abel"
                    android:textSize="20dp"
                    android:textColor="#FFC0CB"
                    />
                <RadioButton android:id="@+id/Other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:fontFamily="@font/abel"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    />
        </RadioGroup>
</ScrollView>