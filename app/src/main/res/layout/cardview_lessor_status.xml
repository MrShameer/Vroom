<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardbackground"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_rentaldetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardbackground"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/iv_bar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dark_purple"
            android:outlineAmbientShadowColor="@color/ligther_purple"
            android:outlineSpotShadowColor="@color/ligther_purple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_lesses"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profile_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_rental">

        </de.hdodenhof.circleimageview.CircleImageView>

        <Button
            android:id="@+id/btn_viewdetails"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:text="View Details"
            android:textSize="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_rental"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_rental">

        </Button>

        <Button
            android:id="@+id/btn_viewmessage"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:text="View Message"
            android:textSize="8dp"
            app:layout_constraintEnd_toEndOf="@+id/btn_viewdetails"
            app:layout_constraintStart_toStartOf="@+id/btn_viewdetails"
            app:layout_constraintTop_toBottomOf="@+id/btn_viewdetails">

        </Button>

        <TextView
            android:id="@+id/tv_rental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Rental Details"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_bar"></TextView>

        <TextView
            android:id="@+id/tv_lessesname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Rental Details"
            android:textColor="@color/white"
            android:textSize="16dp"

            app:layout_constraintStart_toEndOf="@+id/iv_lesses"
            app:layout_constraintTop_toTopOf="@+id/iv_lesses"></TextView>

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@+id/tv_lessesname"
            app:layout_constraintTop_toBottomOf="@+id/tv_lessesname"></TextView>

        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@+id/tv_total"
            app:layout_constraintTop_toBottomOf="@+id/tv_total"></TextView>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rental Date"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@+id/tv_payment"
            app:layout_constraintTop_toBottomOf="@+id/tv_payment"></TextView>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PickUp Location"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@+id/tv_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_date"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RM"
                android:layout_marginTop="15dp"
                android:textColor="@color/fontcolor"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/btn_passenger"
                app:layout_constraintTop_toBottomOf="@+id/btn_passenger" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                android:textColor="@color/fontcolor"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView13"
                app:layout_constraintStart_toEndOf="@+id/textView13"
                app:layout_constraintTop_toTopOf="@+id/textView13" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-10dp"
                android:text="Per Day"
                android:textColor="@color/textcolour"
                android:textSize="10dp"
                app:layout_constraintBottom_toTopOf="@+id/textView13"
                app:layout_constraintEnd_toStartOf="@+id/textView13" />

            <ImageView
                android:id="@+id/iv_vehicle"
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_brand"
                app:srcCompat="@drawable/perodua_bezza" />

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Myvi City 1.5L"
                android:textColor="@color/darker_purple"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_passenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dip"
                android:minHeight="0dip"
                android:padding="4dp"
                android:text="1"
                android:textSize="10sp"
                app:icon="@drawable/ic_baseline_person_24"
                app:iconGravity="textEnd"
                app:iconPadding="4dp"
                app:iconSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/tv_brand"
                app:layout_constraintTop_toBottomOf="@+id/tv_brand" />

            <Button
                android:id="@+id/btn_door"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dip"
                android:minHeight="0dip"
                android:padding="4dp"
                android:text="1"
                android:textSize="10sp"
                app:icon="@drawable/ic_baseline_sensor_door_24"
                app:iconGravity="textEnd"
                app:iconPadding="4dp"
                app:iconSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_passenger"
                app:layout_constraintStart_toEndOf="@+id/btn_passenger"
                app:layout_constraintTop_toTopOf="@+id/btn_passenger"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btn_luggage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="16dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dip"
                android:minHeight="0dip"
                android:padding="4dp"
                android:text="1"
                android:textSize="10sp"
                app:icon="@drawable/ic_baseline_luggage_24"
                app:iconGravity="textEnd"
                app:iconPadding="4dp"
                app:iconSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_door"
                app:layout_constraintStart_toEndOf="@+id/btn_door"
                app:layout_constraintTop_toTopOf="@+id/btn_door"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btn_gas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dip"
                android:minHeight="0dip"
                android:padding="4dp"
                android:text="10"
                android:textSize="10sp"
                app:icon="@drawable/ic_baseline_local_gas_station_24"
                app:iconGravity="textEnd"
                app:iconPadding="4dp"
                app:iconSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_luggage"
                app:layout_constraintStart_toEndOf="@+id/btn_luggage"
                app:layout_constraintTop_toTopOf="@+id/btn_luggage"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_rentalactions"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_book"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/acceptedButton"
            android:fontFamily="@font/abel"
            android:text="Accept"
            android:textColor="@color/white"
            android:layout_marginEnd="2dp"
            android:textSize="14dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reject"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="Reject"
            android:textColor="@color/white"
            android:fontFamily="@font/abel"
            android:textSize="14dp"
            android:layout_marginStart="2dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:backgroundTint="@color/rejectedButton"
            />
    </LinearLayout>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/cl_rentalprogress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_purple"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_rentallayout"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:fontFamily="@font/abel"
            android:gravity="center"
            android:text="Rental Progress"
            android:textColor="@color/white"
            android:textSize="20dp"></TextView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_rentalprogress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_rentalprogress1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_datepayment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/abel"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:text="1/1/2021"
                    android:textSize="16dp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:id="@+id/iv_progresspaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_close_24">

                </ImageView>

                <TextView
                    android:id="@+id/tv_progresspaid"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/abel"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:text="Payment Is Not Done"
                    android:textSize="16dp"
                    android:textStyle="bold">

                </TextView>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_rentalprogress2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pick"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/abel"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:text="1/1/2021"
                    android:textSize="16dp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:id="@+id/iv_progresspick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_close_24">

                </ImageView>

                <TextView
                    android:id="@+id/tv_progresspick"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/abel"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:text="Car Haven't Been Picked Up"
                    android:textSize="16dp"
                    android:textStyle="bold">

                </TextView>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_rentalprogress3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_return"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/abel"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:text="1/1/2021"
                    android:textSize="16dp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:id="@+id/iv_progressreturn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_close_24">

                </ImageView>

                <TextView
                    android:id="@+id/tv_progressreturn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/abel"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:text="Car Has Not Returned Yet"
                    android:textSize="16dp"
                    android:textStyle="bold">

                </TextView>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>